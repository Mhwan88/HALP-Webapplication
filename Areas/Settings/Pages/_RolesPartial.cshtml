@model OperationCHAN.Areas.Settings.Pages.Settings
<div id="roles" style="display:none" class="container text-black mt-2">
    <div class="row">
        <div class="col-sm">
            <input type="text" id="myInput" onkeyup="searchTable(event)" placeholder="Search for names..">
            
            <div style="overflow-y: auto; height:30vh;">
                <table id="users_table">
                    <tr>
                        <th>Nickname</th>
                    </tr>
                
                    @{
                        foreach (var user in Model.Users)
                        {
                            <tr >
                                <td>
                                    <button type="submit" value="@user.Nickname" onclick="getUserData(event)" class="btn studassButton">@user.Nickname</button>
                                </td>
                            </tr>
                        }
                    }
                </table>
                </div>
        </div>
        <div class="col-sm">
            <input type="text" id="myInput" onkeyup="searchTable(event)" placeholder="Search for courses..">

            <div style="overflow-y: auto; height:30vh;">
                <table id="courses_table" >
                    <tr>
                        <th>Course</th>
                        <th>Studass</th>
                    </tr>
                    @{
                        foreach (var course in Model.Courses)
                        {
                            <tr>
                                <td>@course</td>
                                <td>
                                    <div class="form-check">
                                        <input class="form-check-input studassbox" type="checkbox" value="" onclick="setStudass(event)" id="@course">
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </table>
                </div>
        </div>
    </div>
    <div class="d-flex text-white justify-content-center mt-3">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" onclick="setAdmin(event)" id="adminCheckBox">
            <label class="form-check-label" for="flexCheckDefault">
                Admin
            </label>
        </div>
        
    </div>
</div>